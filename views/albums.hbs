<div class="container">
    <div class="row">
    {{#each albums}}
    <div class="col-lg-4 artist-container">
        <h2>{{this.name}}</h2>
            <img src="{{this.images.[0].url}}" alt="" class="artist-img">
                 <div class="artist-info-container">
                     <p>{{this.name}}</p>
                <a href="/tracks/{{this.id}}">view tracks</a> 
            </div>
        </div>   
        {{/each}}
     </div>
</div>

